<!DOCTYPE html>
<html>

<head>
    <title>Your notes</title>
    <link rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css'>
</head>

<style>
    table,
    th,
    td {
        padding: 5px;
        border: 1px solid black;
        border-collapse: collapse;
    }
</style>

<body>
    <div id="notes" style="width: 600px; margin:auto">
        Hello {{userData.name}}, how are you
        <table>
            <ol>
                <tr>
                    <th>
                        Your Notes
                    </th>
                    <th colspan="2">
                        operations
                    </th>
                </tr>
                {{#each userData.notes}}
                {{!-- <li> --}}
                    <tr>
                        <td>
                            <h3>{{this}}</h3>
                        </td>
                        <td>
                            {{!-- edit --}}
                            <form action="/edit_notes/{{../userData._id}}" method="post">
                            <input type="hidden" name="note_name" value="{{this}}">
                                <a onclick="this.parentNode.submit();" style="cursor: pointer;"><span
                                        class="bi bi-pen"></span></a>
                            </form>
                        </td>
                        <td>
                            {{!-- delete --}}
                            <form action="/delete_notes/{{../userData._id}}" method="post">
                            <input type="hidden" name="note_name" value="{{this}}">
                                <a onclick="this.parentNode.submit();" style="cursor: pointer;"><span
                                        class="bi bi-trash" ></span></a>
                            </form>
                        </td>
                    </tr>
                    {{!--
                </li> --}}
                {{/each}}

            </ol>
        </table>

    </div>
    <br>

    <form action="/save_notes/{{userData._id}}" method="post" style="width: 600px; margin:auto">

        <label for="new_note">Add note</label>
        <br>
        <textarea name="new_note" style="width: 300px; height: 100px" placeholder="Share your notes"></textarea>
        <br>
        <input type="submit">
    </form>


</body>

</html>